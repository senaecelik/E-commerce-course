<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="regular_style">
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:fontFamily">@font/nun_sans_regular</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="button_general">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="button_white_general">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="title_text">
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_toolbar" parent="regular_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_card_image">
        <item name="android:layout_width">@dimen/_65sdp</item>
        <item name="android:layout_height">@dimen/_65sdp</item>
        <item name="android:layout_marginTop">@dimen/_14sdp</item>
        <item name="android:layout_marginBottom">@dimen/_14sdp</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
    </style>

    <style name="style_heart">
        <item name="android:layout_width">@dimen/_14sdp</item>
        <item name="android:layout_height">@dimen/_14sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:background">@drawable/ic_heart</item>
    </style>

    <style name="style_text_white_small" parent="regular_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_text_black_norm" parent="regular_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_primaryColor_bold" parent="regular_style">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_image_trash">
        <item name="android:layout_width">@dimen/_16sdp</item>
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
    </style>
</resources>